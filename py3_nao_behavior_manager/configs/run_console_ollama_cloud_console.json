{
  "input": {
    "type": "console",
    "params": {
      "prompt_text": "You> ",
      "confirm_before_send": false,
      "print_input": false,
      "status_to_console": true
    }
  },
  "llm": {
    "type": "ollama_cloud",
    "params": {
      "host": "https://ollama.com",
      "model": "gpt-oss:120b",
      "api_key": "${OLLAMA_API_KEY}",
      "system_prompt_file": "master_prompts/default.txt",
      "context": {
        "max_history_turns": 8
      }
    }
  },
  "output": {
    "type": "console",
    "params": {
      "prefix": "BOT"
    }
  },
  "run": { "status_to_console": true }
}
