{
  "run": {
    "status_to_console": true,
    "log_messages": true
  },
  "input": {
    "type": "audio",
    "mic": {
      "type": "laptop",
      "params": {
        "sample_rate": 16000,
        "start_threshold_rms": 500,
        "stop_silence_ms": 1000,
        "pre_roll_ms": 200,
        "max_utterance_s": 12.0,
        "block_ms": 20,
        "input_device": null
      }
    },
    "stt": {
      "type": "whisper",
      "params": {
        "mode": "AUTO",
        "model_cpu": "small",
        "model_gpu": "medium",
        "compute_type_cpu": "int8",
        "compute_type_gpu": "float16",
        "language": "nl",
        "vad_filter": true,
        "min_silence_duration_ms": 1000
      }
    },
    "params": {
      "confirm_before_record": true,
      "confirm_before_send": true,
      "start_timeout_s": null,
      "print_input": true
    }
  },
  "llm": {
    "type": "ollama_local",
    "params": {
      "host": "http://localhost:11434",
      "model": "gemma:2b",
      "system_prompt_file": "master_prompts/short.txt",
      "context": {
        "max_history_turns": 4
      }
    }
  },
  "output": {
    "type": "console",
    "params": {
      "prefix": "BOT"
    }
  }
}
